# Unix like Tab completion
Set-PSReadlineKeyHandler -Key Tab -Function Complete
Import-Module PSColor

# git status shortcut
function gitstatus{
      git status
      }
Set-Alias gs gitstatus

# git add all shortcut
function gitadd{
      git add .
      }
Set-Alias ga gitadd

# git commit shortcut
function gitcommit(){
      git commit -m "$args"
      }
Set-Alias cm gitcommit

# jupyter lab shortcut
function jupyter{
      start jupyter lab
      }
Set-Alias jlab jupyter

# activate venv
function venvactive{
      & ".\$($args[0])\Scripts\activate.ps1"
      }
Set-Alias activate venvactive

# grep like function
function greppi{
      $input | findstr $args
      }
Set-Alias grep greppi
