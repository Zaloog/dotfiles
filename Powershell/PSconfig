# Unix like Tab completion
Set-PSReadlineKeyHandler -Key Tab -Function Complete
Import-Module PSColor

# Setting for fuzzy finder
Set-PsFzfOption -PSReadlineChordProvider 'Ctrl+f'

# git status shortcut
function gitstatus{
      git status
      }
Set-Alias gs gitstatus

# git add all shortcut
function gitadd{
      git add .
      }
Set-Alias ga gitadd

# git commit shortcut
function gitcommit(){
      git commit -m "$args"
      }
Set-Alias cm gitcommit

# jupyter lab shortcut
function jupyter{
      start jupyter lab
      }
Set-Alias jlab jupyter

# desktop shortcut
function todesktop{
      cd "C:\Users\$env:UserName\Desktop\"
      }
Set-Alias ddd todesktop

# activate env
function actenv(){
    & "C:\Users\$env:UserName\Envs\$($args[0])\Scripts\activate.ps1"
    }
Set-Alias act actenv

# list envs
function showenv(){
    lsvirtualenv
    }
Set-Alias envs showenv

